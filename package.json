{
  "name": "backstage-browser",
  "version": "1.0.0",
  "description": "Navegador personalizado para salas de karaoke Backstage",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "backstage1": "electron . --sala=backstage1",
    "backstage2": "electron . --sala=backstage2",
    "backstage3": "electron . --sala=backstage3",
    "backstage4": "electron . --sala=backstage4",
    "backstage5": "electron . --sala=backstage5",
    "backstage6": "electron . --sala=backstage6"
  },
  "author": "Don Bercho",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.2"
  },
  "build": {
    "appId": "com.backstage.browser",
    "productName": "BackStage Browser",
    "win": {
      "icon": "assets/icons/icon_256x256.ico",
      "target": "nsis"
    },
    "directories": {
      "buildResources": "assets/icons"
    }
  }
}
